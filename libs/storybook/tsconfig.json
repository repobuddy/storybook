{
	"compilerOptions": {
		// "allowImportingTsExtensions": true,
		"composite": true,
		"isolatedModules": true,
		// "allowJs": true,
		"jsx": "react-jsx",
		"lib": ["ESNext", "DOM.Iterable", "DOM"],
		"module": "preserve",
		"moduleDetection": "force",
		// "module": "ESNext",
		"moduleResolution": "Bundler",
		"outDir": "esm",
		"rewriteRelativeImportExtensions": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		// "target": "ES2020",
		"verbatimModuleSyntax": true
	},
	"include": ["src"],
	"references": [
		{
			"path": "./tsconfig.proj.json"
		}
	]
}
