{
	"compilerOptions": {
		"composite": true,
		"isolatedModules": true,
		"jsx": "react",
		"lib": ["ESNext", "DOM.Iterable", "DOM"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "esm",
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2020",
		"verbatimModuleSyntax": true
	},
	"include": ["src", "types", ".storybook"]
}
