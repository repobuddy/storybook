{
	"name": "@repobuddy/storybook",
	"version": "1.0.1",
	"description": "Storybook repo buddy",
	"keywords": [
		"storybook",
		"testing",
		"documentation"
	],
	"license": "MIT",
	"author": {
		"name": "Homa Wong",
		"email": "homawong@gmail.com",
		"url": "https://github.com/unional"
	},
	"type": "module",
	"imports": {
		"#repobuddy/storybook": "./src/index.ts",
		"#repobuddy/storybook/internal": "./src/internal/index.ts",
		"#repobuddy/storybook/variants": "./src/variants/index.ts",
		"#repobuddy/storybook/variants/package.json": "./src/variants/package.json",
		"#repobuddy/storybook/variants/preset": "./src/variants/preset.ts",
		"#repobuddy/storybook/variants/manager": "./src/variants/manager.ts"
	},
	"exports": {
		".": {
			"types": "./esm/index.d.ts",
			"default": "./esm/index.js"
		},
		"./manager": {
			"types": "./esm/manager/index.d.ts",
			"default": "./esm/manager/index.js"
		},
		"./storybook-addon-tag-badges": {
			"types": "./esm/storybook-addon-tag-badges/index.d.ts",
			"default": "./esm/storybook-addon-tag-badges/index.js"
		},
		"./storybook-dark-mode": {
			"types": "./esm/storybook-dark-mode/index.d.ts",
			"default": "./esm/storybook-dark-mode/index.js"
		},
		"./variants": {
			"import": {
				"types": "./esm/variants/index.d.ts",
				"default": "./esm/variants/index.js"
			}
		},
		"./variants/manager": {
			"types": "./esm/variants/manager.d.ts",
			"default": "./esm/variants/manager.js"
		},
		"./variants/package.json": "./esm/variants/package.json",
		"./variants/preset": "./esm/variants/preset.js"
	},
	"files": [
		"cjs",
		"esm",
		"src",
		"!**/*.{spec,test,unit,accept,integrate,system,perf,stress,study,stories}.*",
		"!**/*.mdx"
	],
	"scripts": {
		"build": "run-s build:*",
		"build:code": "unbuild",
		"build:ncp-cjs": "ncp package.cjs.json cjs/package.json",
		"build:ncp-variants": "ncp package.esm.json esm/variants/package.json",
		"clean": "rimraf .turbo coverage cjs esm storybook-static *.tsbuildinfo",
		"coverage": "vitest run --coverage",
		"sb": "storybook dev -p 6006",
		"sb:build": "storybook build",
		"test": "vitest run",
		"test:dark": "vitest run --config=vitest.config.dark.ts",
		"test:light": "vitest run --config=vitest.config.light.ts",
		"test:theme": "vitest run --config=vitest.config.theme.ts",
		"w": "vitest"
	},
	"dependencies": {
		"@just-web/css": "^0.7.0",
		"@just-web/types": "^0.1.1",
		"@repobuddy/test": "^1.0.0",
		"@storybook/icons": "^2.0.0",
		"htmlfy": "^1.0.0"
	},
	"devDependencies": {
		"@repobuddy/vitest": "^1.2.2",
		"@storybook-community/storybook-dark-mode": "^6.0.7",
		"@storybook/addon-docs": "^9.1.10",
		"@storybook/addon-themes": "^9.1.10",
		"@storybook/addon-vitest": "^9.1.10",
		"@storybook/react-vite": "^9.1.10",
		"@tailwindcss/cli": "^4.1.5",
		"@tailwindcss/vite": "^4.1.5",
		"@vitejs/plugin-react": "^4.5.1",
		"@vitest/browser": "^3.1.2",
		"@vitest/coverage-v8": "^3.1.2",
		"dedent": "^1.6.0",
		"ncp": "^2.0.0",
		"npm-run-all2": "^8.0.4",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"rimraf": "^6.0.1",
		"storybook": "^9.1.10",
		"storybook-addon-tag-badges": "^3.0.0",
		"storybook-addon-vis": "^2.1.2",
		"tailwindcss": "^4.1.5",
		"unbuild": "^3.5.0",
		"vite": "^7.1.7",
		"vitest": "^3.1.2"
	},
	"peerDependencies": {
		"@storybook-community/storybook-dark-mode": "^6.0.0",
		"storybook-addon-tag-badges": "^2.0.0 || ^3.0.0"
	},
	"peerDependenciesMeta": {
		"@storybook-community/storybook-dark-mode": {
			"optional": true
		},
		"storybook-addon-tag-badges": {
			"optional": true
		}
	}
}
