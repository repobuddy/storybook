{
	"name": "@repobuddy/storybook",
	"version": "2.16.0",
	"description": "Storybook repo buddy",
	"keywords": [
		"storybook",
		"testing",
		"documentation"
	],
	"license": "MIT",
	"author": {
		"name": "Homa Wong",
		"email": "homawong@gmail.com",
		"url": "https://github.com/unional"
	},
	"type": "module",
	"imports": {
		"#repobuddy/storybook": "./src/index.ts",
		"#repobuddy/storybook/manager": "./src/manager/index.ts",
		"#repobuddy/storybook/storybook-addon-tag-badges": "./src/storybook-addon-tag-badges/index.ts",
		"#repobuddy/storybook/storybook-dark-mode": "./src/storybook-dark-mode/index.ts",
		"#repobuddy/storybook/variants": "./src/variants/index.ts",
		"#repobuddy/storybook/variants/package.json": "./src/variants/package.json"
	},
	"exports": {
		".": {
			"types": "./esm/index.d.ts",
			"default": "./esm/index.js"
		},
		"./manager": {
			"types": "./esm/manager/index.d.ts",
			"default": "./esm/manager/index.js"
		},
		"./storybook-addon-tag-badges": {
			"types": "./esm/storybook-addon-tag-badges/index.d.ts",
			"default": "./esm/storybook-addon-tag-badges/index.js"
		},
		"./storybook-dark-mode": {
			"types": "./esm/storybook-dark-mode/index.d.ts",
			"default": "./esm/storybook-dark-mode/index.js"
		},
		"./tailwind": {
			"style": "./tailwind.css"
		},
		"./tailwind.css": {
			"style": "./tailwind.css"
		},
		"./styles.css": "./styles.css"
	},
	"files": [
		"cjs",
		"esm",
		"src",
		"styles.css",
		"tailwind.css",
		"!**/*.{spec,test,unit,accept,integrate,system,perf,stress,study,stories}.*",
		"!**/*.mdx"
	],
	"scripts": {
		"build": "run-p build:*",
		"build:code": "tsdown",
		"build:css": "tailwindcss -i ./tailwind.css -o ./styles.css",
		"clean": "rimraf .turbo coverage cjs esm storybook-static *.tsbuildinfo",
		"coverage": "vitest run --coverage",
		"sb": "storybook dev -p 6006",
		"sb:build": "storybook build",
		"test": "vitest run",
		"test:dark": "vitest run --config=vitest.config.dark.ts",
		"test:light": "vitest run --config=vitest.config.light.ts",
		"test:theme": "vitest run --config=vitest.config.theme.ts",
		"test:types": "tsc --noEmit",
		"w": "vitest"
	},
	"dependencies": {
		"@just-web/css": "^0.8.0",
		"@repobuddy/test": "^1.0.0",
		"class-variance-authority": "^0.7.1",
		"htmlfy": "^1.0.0",
		"tailwind-merge": "^3.4.0",
		"type-plus": "8.0.0-beta.8"
	},
	"devDependencies": {
		"@repobuddy/vitest": "^2.0.0",
		"@storybook-community/storybook-dark-mode": "^7.0.2",
		"@storybook/addon-docs": "^10.2.4",
		"@storybook/addon-vitest": "^10.1.10",
		"@storybook/react-vite": "^10.2.4",
		"@tailwindcss/cli": "^4.1.17",
		"@tailwindcss/vite": "^4.1.17",
		"@vitest/browser": "^4.0.16",
		"@vitest/browser-playwright": "^4.0.16",
		"@vitest/coverage-v8": "^4.0.16",
		"dedent": "^1.7.0",
		"npm-run-all2": "^8.0.4",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"rimraf": "^6.1.0",
		"storybook": "^10.1.10",
		"storybook-addon-tag-badges": "^3.0.2",
		"tailwindcss": "^4.1.17",
		"tsdown": "^0.20.0",
		"vite": "^7.3.0",
		"vitest": "^4.0.16"
	},
	"peerDependencies": {
		"@storybook-community/storybook-dark-mode": "^7.0.0",
		"@storybook/addon-docs": "^10.2.4",
		"storybook-addon-tag-badges": "^3.0.2"
	},
	"peerDependenciesMeta": {
		"@storybook-community/storybook-dark-mode": {
			"optional": true
		},
		"storybook-addon-tag-badges": {
			"optional": true
		}
	}
}
