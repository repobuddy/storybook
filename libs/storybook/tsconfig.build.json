{
	"compilerOptions": {
		"composite": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": ["ESNext", "DOM.Iterable", "DOM"],
		"module": "preserve",
		"moduleDetection": "force",
		"moduleResolution": "bundler",
		"outDir": "esm",
		"rewriteRelativeImportExtensions": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		"verbatimModuleSyntax": true
	},
	"include": ["src"]
}
