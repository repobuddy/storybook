{
	"$schema": "https://turborepo.org/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["src/**", "ts/**", "package.json", "tsconfig.*"],
			"outputs": ["cjs/**", "esm/**", "dist/**", "*.tsbuildinfo"]
		},
		"build:doc": {
			"dependsOn": ["^build"]
		},
		"clean": {
			"cache": false
		},
		"coverage": {
			"dependsOn": ["^build"],
			"inputs": ["src/**", "package.json", "tsconfig.*"],
			"outputs": ["coverage/**"]
		},
		"depcheck": {
			"dependsOn": ["build"]
		},
		"dev": {
			"cache": false
		},

		"size": {
			"dependsOn": ["build"]
		},
		"test": {
			"dependsOn": ["^build"],
			"inputs": ["src/**", "ts/**", "package.json", "tsconfig.*"]
		}
	}
}
