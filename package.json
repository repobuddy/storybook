{
	"name": "@repobuddy/storybook-monorepo",
	"version": "0.0.0",
	"private": true,
	"keywords": [],
	"license": "MIT",
	"author": {
		"name": "Homa Wong",
		"email": "homawong@gmail.com",
		"url": "https://github.com/unional"
	},
	"scripts": {
		"app": "pnpm --filter ./apps/app",
		"build": "turbo run build",
		"build:doc": "turbo run sb:build",
		"check": "biome check",
		"check:fix": "biome check --fix",
		"clean": "turbo clean",
		"cs": "changeset",
		"knip": "knip",
		"nuke": "turbo nuke && rimraf node_modules",
		"prepare": "husky",
		"release": "pnpm build && changeset publish",
		"sb": "pnpm --filter @repobuddy/storybook",
		"t": "turbo test",
		"v": "turbo check build coverage",
		"verify": "turbo check build coverage",
		"verify:ci": "turbo check build coverage --concurrency=1",
		"version": "changeset version && node scripts/update-version-tags.mjs"
	},
	"dependencies": {
		"@biomejs/biome": "2.3.14",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.7",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@repobuddy/biome": "2.2.0",
		"@types/react": "^19.2.5",
		"husky": "^9.1.7",
		"knip": "^5.83.0",
		"playwright": "^1.57.0",
		"rimraf": "^6.1.0",
		"turbo": "^2.6.1",
		"typescript": "^5.9.3"
	},
	"packageManager": "pnpm@10.28.2"
}
