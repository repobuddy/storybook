	},
	"scripts": {
		"app": "pnpm --filter ./apps/app",
		"build": "turbo run build",
		"build:doc": "turbo run sb:build",
		"check": "biome check",
		"check:fix": "biome check --fix",
		"clean": "turbo clean",
		"coverage": "vitest run --coverage",
		"cs": "changeset",
		"nuke": "turbo nuke && rimraf node_modules",
		"prepare": "husky",
		"release": "pnpm build && changeset publish",
		"sb": "pnpm --filter @repobuddy/storybook",
		"t": "turbo test",
		"v": "turbo check build coverage",
		"verify": "turbo check build coverage",
		"verify:ci": "turbo check build coverage --concurrency=1",
		"version": "changeset version"
	},
	"dependencies": {
		"@biomejs/biome": "2.3.5",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.28.1",
		"@commitlint/cli": "^20.0.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@repobuddy/biome": "2.1.0",
		"@types/react": "^19.1.2",
		"add": "^2.0.6",
		"husky": "^9.1.7",
		"pathe": "^2.0.3",
		"playwright": "latest",
		"rimraf": "^6.0.1",
		"turbo": "^2.4.4",
		"typescript": "^5.8.3"
	},
	"packageManager": "pnpm@10.22.0"
}
