{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"extends": ["@repobuddy/biome/recommended"],
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.json",
			"!node_modules",
			"!**/.sb-themes",
			"!dist",
			"!build",
			"!coverage",
			"!*.mdx",
			"!*.md",
			"!.vscode"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"trailingCommas": "none"
		}
	}
}
